<resources>

    <style name="AppBaseTheme" parent="@style/Theme.NoTitleBar">
    </style>
    <style name="AppTheme" parent="AppBaseTheme">
    </style>
    
    <style name="DialogBaseTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorBackgroundCacheHint">@null</item>
    </style>
    
    <style name="GridItemMenuTheme" parent="DialogBaseTheme">
        <item name="android:windowAnimationStyle">@style/BottomWindowAnimation</item>
		<item name="android:windowIsFloating">false</item>
		<item name="android:windowIsTranslucent">true</item>
    </style>
    
    <style name="MenuDialogTheme" parent="DialogBaseTheme">
        <item name="android:windowAnimationStyle">@style/BottomWindowAnimation</item>
		<item name="android:windowIsFloating">false</item>
		<item name="android:windowIsTranslucent">true</item>
    </style>
    
    <style name="BookDeleteConformDialogTheme" parent="DialogBaseTheme"></style>
    
    <style name="ReaderTheme" parent="@style/Theme.NoTitleBar.Fullscreen">
    </style>
    
    <style name="ChapterDialog" parent="@style/Theme.NoTitleBar.Fullscreen"></style>

    <style name="GridMenuItem">
        <item name="android:textSize">@dimen/font_size_large</item>
        <item name="android:textColor">@color/text_color_1</item>
    </style>
    
    <style name="BottomWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/bottom_fade_in_a</item>
        <item name="android:windowExitAnimation">@anim/bottom_fade_out_a</item>
    </style>
</resources>
